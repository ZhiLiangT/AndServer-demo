<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    <LinearLayout 
        android:id="@+id/main_set_port"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
	    <TextView 
	        android:id="@+id/main_tv_set_port"
	        android:text="端口号"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"/>
        <EditText 
            android:id="@+id/main_et_set_port"
            android:hint="请输入端口号"
            android:text="8080"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:id="@+id/main_set_outtime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
	    <TextView 
	        android:id="@+id/main_tv_set_outtime"
	        android:text="超时时间"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"/>
        <EditText 
            android:id="@+id/main_et_set_outtime"
            android:hint="毫秒为单位"
             android:text="10000"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/main_set_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
	    <TextView 
	        android:id="@+id/main_tv_set_address"
	        android:text="访问地址"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"/>
        <EditText 
            android:id="@+id/main_et_set_address"
            android:hint="地址"
            android:text="/storage/emulated/0/db"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            />
    </LinearLayout>
    <Button 
        android:id="@+id/main_bt_set_address"
        android:text="选择文件夹"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button 
        android:id="@+id/main_bt_start_server"
        android:text="开启服务器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button 
        android:id="@+id/main_bt_stop_server"
        android:text="停止服务器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button 
        android:id="@+id/main_bt_test_state"
        android:text="测试服务器状态"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</LinearLayout>
